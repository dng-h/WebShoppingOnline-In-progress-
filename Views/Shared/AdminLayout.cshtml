@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script type="text/javascript" src="~/lib/jquery/dist/jquery-3.7.1.js"></script>
</head>
<body>

    <!-- Header -->
    <header class="header">
        <div class="logo">Admin Panel</div>
        <div class="header-right">
            <div class="notification">
                <i class="fa-solid fa-bell"></i>
            </div>
            <div class="user">
                <i class="fa-solid fa-user"></i>
            </div>
        </div>
    </header>

    <!-- Layout chính -->
    <main class="admin-container">
        <!-- Sidebar bên trái -->
        <nav class="sidebar">
            <ul>
                <li>
                    <a href="#">Dashboard</a>
                </li>
                <li>
                    <a asp-controller="Admin" asp-action="ProductManagement">Products</a>
                </li>
                <li>
                    <a href="#">Categories</a>
                </li>
                <li>
                    <a href="#">Suppliers</a>
                </li>
                <li>
                    <a href="#">Customers</a>
                </li>
                <li>
                    <a href="#">Orders</a>
                </li>
                <li>
                    <a href="#">Settings</a>
                </li>
            </ul>
        </nav>

        <!-- Nội dung bên phải -->
        <section class="content">
            @RenderBody()
        </section>
    </main>

</body>
</html>

<style>
    /* Reset CSS */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }

    /* Header */
    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #2c3e50;
        color: white;
        padding: 15px 20px;
    }

    .logo {
        font-size: 20px;
        font-weight: bold;
    }

    .header-right {
        display: flex;
        gap: 20px;
    }

        .header-right .notification,
        .header-right .user {
            font-size: 18px;
            cursor: pointer;
        }

    /* Layout chính */
    .admin-container {
        display: flex;
        height: calc(100vh - 60px);
    }

    /* Sidebar */
    .sidebar {
        width: 250px;
        background-color: #34495e;
        color: white;
        padding-top: 20px;
    }

        .sidebar ul {
            list-style-type: none;
        }

            .sidebar ul li {
                padding: 12px 20px;
            }

                .sidebar ul li a {
                    text-decoration: none;
                    color: white;
                    display: block;
                    transition: background 0.3s;
                }

                    .sidebar ul li a:hover {
                        background: #1abc9c;
                        border-radius: 5px;
                    }

    /* Nội dung chính */
    .content {
        flex: 1;
        padding: 20px;
        background-color: #ecf0f1;
        overflow-y: auto;
    }

</style>