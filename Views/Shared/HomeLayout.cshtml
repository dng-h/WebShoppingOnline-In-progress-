<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop Online</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="~/lib/jquery/dist/jquery-3.7.1.js"></script>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>

    <!-- Header -->
    <header class="header">
        <div class="nav1">
        <div class="logo">
            Phụ kiện thú cưng
        </div>

        <nav class="nav">
            <a asp-controller="Home" asp-action="Index">
                <i class="fa-solid fa-house"></i>
                Trang chủ
            </a>
            <a href="#">
                <i class="fa-solid fa-newspaper"></i>
                Tin tức
            </a>
            <a href="#">
                <i class="fa-solid fa-book-open-reader"></i>
                Giới thiệu
            </a>
            <a href="#">
                <i class="fa-solid fa-address-book"></i>
                Liên hệ
            </a>
        </nav>
        </div>

        <div class="nav2">
        <div class="categoies">
            @await Component.InvokeAsync("CategoriesMenu")
        </div>

        <div class="search-bar">
            <input type="text" placeholder="Tìm kiếm sản phẩm...">
            <button>Tìm kiếm</button>
        </div>
        <div class="header-icons">
                <a asp-controller="Cart" asp-action="ViewCart">
                <i class="fa-solid fa-basket-shopping"></i>
                Giỏ hàng
            </a>
            <div class="userdropdown">
                <button class="userdropdown-button" onclick="toggleUser()">
                    <i class="fa-solid fa-circle-user"></i>
                </button>
                <div class="userdropdown-menu" id="userdropdownMenu">
                    <a href="#">Sửa thông tin</a>
                    <a href="#">Đơn hàng của tôi</a>
                    <a asp-controller="Home" asp-action="LogOut">Đăng xuất</a>
                </div>
            </div>

        </div>
        </div>

        <script>
            function toggleUser() {
                var menu = document.getElementById("userdropdownMenu")
                menu.style.display = (menu.style.display === "block") ? "none" : "block"
            }

            document.addEventListener("click", function(event) {
                var dropdown = document.querySelector(".userdropdown")
                if (!dropdown.contains(event.target)) {
                    document.getElementById("userdropdownMenu").style.display = "none"
                }
            })
        </script>

        <style>
            .userdropdown {
                position: relative;
                display: inline-block;
            }

            .userdropdown-button {
                padding: 10px 15px;
                border: none;
                cursor: pointer;
                border-radius: 5px;
            }

            .userdropdown-menu {
                display: none;
                position: absolute;
                background-color: white;
                min-width: 150px;
                box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
                border-radius: 5px;
                z-index: 100;
            }

                .userdropdown-menu a {
                    color: black;
                    padding: 10px;
                    text-decoration: none;
                    display: block;
                }

                    .userdropdown-menu a:hover {
                        background-color: #f1f1f1;
                    }
        </style>
    </header>    

    <!-- Main Content -->
    <main class="container">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2025 Shop Online. Mọi quyền được bảo lưu.</p>
        <p>Địa chỉ: 123 Đường ABC, Quận X, Thành phố Y</p>
        <p>Email: support@shoponline.com | Hotline: 0123 456 789</p>
    </footer>

</body>
</html>