@model Account

<div id="editProfileModal" style="display: none; position: fixed; top: 20%; left: 50%; transform: translate(-50%, 0);
            background: white; padding: 20px; border-radius: 5px; box-shadow: 0px 4px 6px rgba(0,0,0,0.1);">
    <h3>Sửa thông tin</h3>
    <form id="editProfileForm">
        <label>Tên đăng nhập:</label>
        <input type="text" name="FullName" value="@Model.FullName" required />
        <br />
        <label>Phone:</label>
        <input type="text" name="Phone" value="@Model.Phone" required />
        <br />
        <label>Address:</label>
        <input type="text" name="Address" value="@Model.Address" required />
        <br />
        <button type="submit">Lưu</button>
        <button type="button" onclick="closeModal()">Hủy</button>
    </form>
</div>