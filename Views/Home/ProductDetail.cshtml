        width: 70px;
        margin: 5px;
        cursor: pointer;
        border-radius: 5px;
    }

    .nav-btn {
        background: none;
        border: none;
        font-size: 20px;
        cursor: pointer;
    }

    .product-info {
        width: 50%;
    }

    .price {
        font-size: 22px;
        color: red;
        font-weight: bold;
    }

    .short-desc {
        margin: 10px 0;
    }

    .quantity input {
        width: 50px;
    }

    .add-to-cart {
        background: green;
        color: white;
        padding: 10px;
        border: none;
        cursor: pointer;
    }

    .product-description {
        margin-top: 30px;
    }

    .related-products {
        margin-top: 30px;
    }

    .related-list {
        display: flex;
        gap: 10px;
    }

    .related-item {
        width: 200px;
        text-align: center;
    }

        .related-item img {
            width: 100%;
            border-radius: 5px;
